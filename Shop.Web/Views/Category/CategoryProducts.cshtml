@model IEnumerable<Shop.Data.Models.Product>

@{
    ViewBag.Title = "CategoryProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    
    <div class="row text-center text-white mb-5">
        <div class="col-lg-7 mx-auto" style="color:black">
            <h1 class="display-4">Categories of Products</h1>
            <p class="lead mb-0">To Make Shopping Easy</p>
        </div>
    </div>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">Match Not Found</td>
        </tr>
    }
    else
    {
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var product in Model)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="@Url.Content(product.ImageUrl)" alt="..." />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@product.Name</h5>
                                        <!-- Product price-->
                                        $@Html.Label(product.Price.ToString())
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="@Url.Action("Details","Product", new {id=product.Id })">View options</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
</div>